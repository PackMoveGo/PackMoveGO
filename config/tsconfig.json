{
  "compilerOptions": {
    "target":"ES2020",
    "useDefineForClassFields":true,
    "lib":["ES2020","DOM","DOM.Iterable"],
    "module":"ESNext",
    "skipLibCheck":true,

    /* Bundler mode */
    "moduleResolution":"bundler",
    "allowImportingTsExtensions":true,
    "resolveJsonModule":true,
    "isolatedModules":true,
    "noEmit":true,
    "jsx":"react-jsx",

    /* Linting */
    "strict":true,
    "noUnusedLocals":false,
    "noUnusedParameters":true,
    "noFallthroughCasesInSwitch":true,

    /* Vite types */
    "types": ["vite/client"],

    /* Path mapping */
    "baseUrl":"..",
    "paths":{
      "@/*":["./src/*"],
      "@config/*":["./config/*"],
      "@vercel/analytics":["./node_modules/@vercel/analytics/dist/index.js"],
      "@vercel/speed-insights":["./node_modules/@vercel/speed-insights/dist/index.js"]
    }
  },
  "include":["../src/**/*.ts","../src/**/*.tsx","../src/**/*.js","../src/**/*.jsx","../src/types/**/*.d.ts","vercel.tsx","contentSecurityPolicy.ts","api.ts","cors.ts"],
  "exclude":["../dist/*","../node_modules/*"]
} 