{
  "framework": "vite",
  "outputDirectory": "dist",
  "buildCommand": "npm run build",
  "installCommand": "npm install --include=dev",
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/favicon.ico"
    },
    {
      "source": "/site.webmanifest",
      "destination": "/site.webmanifest"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/moving-truck.webp",
      "destination": "/moving-truck.webp"
    },
    {
      "source": "/og-cover.jpg",
      "destination": "/og-cover.jpg"
    },
    {
      "source": "/(.*)",
      "destination": "/api/ssr"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "TAILWIND_MODE": "build",
      "POSTCSS_CONFIG": "config/postcss.config.mjs",
      "TAILWIND_CONFIG": "config/tailwind.config.js",
      "VITE_CSS_ENABLED": "true",
      "VITE_TAILWIND_ENABLED": "true"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}
      ]
    },
    {
      "source": "/assets/(.*)\\.css",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}
      ]
    },
    {
      "source": "/assets/(.*)\\.js",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}
      ]
    },
    {
      "source": "/moving-truck.webp",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"},
        {"key": "Content-Type", "value": "image/webp"}
      ]
    },
    {
      "source": "/og-cover.jpg",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"},
        {"key": "Content-Type", "value": "image/jpeg"}
      ]
    },
    {
      "source": "/og-cover-v2.jpg",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"},
        {"key": "Content-Type", "value": "image/jpeg"}
      ]
    },
    {
      "source": "/og-cover-v2.png",
      "headers": [
        {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"},
        {"key": "Content-Type", "value": "image/png"}
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {"key": "X-Content-Type-Options", "value": "nosniff"},
        {"key": "X-Frame-Options", "value": "DENY"},
        {"key": "X-XSS-Protection", "value": "1; mode=block"},
        {"key": "Cache-Control", "value": "public, max-age=0, must-revalidate"},
        {"key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload"}
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_APP_NAME": "PackMoveGo",
    "VITE_APP_VERSION": "0.1.0",
    "VITE_DEV_MODE": "production",
    "VITE_PORT": "5000",
    "VITE_SKIP_BACKEND_CHECK": "true",
    "VITE_API_URL": "https://api.packmovego.com",
    "VITE_API_TIMEOUT": "15000",
    "VITE_API_RETRY_ATTEMPTS": "5",
    "VITE_API_RETRY_DELAY": "2000",
    "VITE_CACHE_ENABLED": "true",
    "VITE_CACHE_TTL": "7200",
    "VITE_CACHE_MAX_SIZE": "200",
    "VITE_REDUCE_LOGGING": "true",
    "ENABLE_DEV_TOOLS": "false",
    "TAILWIND_MODE": "build"
  }
}